<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Trail name</th>
      <th>Location</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    {{#each traillist.trails}}
      <tr>
        <td>
          {{title}}
        </td>
        <td>
          {{location}}
        </td>
        <td>
          {{type}}
        </td>
        <td>
         <a href="/traillist/{{../traillist._id}}/deletetrail/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
        </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>