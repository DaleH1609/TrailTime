<form class="box" action="/traillist/{{traillist._id}}/addtrail" method="POST">
  <label>Enter Trail Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter trail name" name="title">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter location" name="location">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter type" name="type">
      </div>
      <div class="field">
      <input class="input" type="number" placeholder="Enter latitude" step=".000001" name="latitude">
      </div>
      <div class="field">
      <input class="input" type="number" placeholder="Enter longitude" step=".000001" name="longitude">
    </div>
    </div>
  </div>
  <button class="button is-primary">Add Trail</button>
</form>
<div id="mapid">
  <script>
    var mymap = L.map('mapid').setView([54, -9], 6);
    L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
    maxZoom: 18,
    id: 'mapbox/streets-v11',
    tileSize: 512,
    zoomOffset: -1,
    accessToken: 'pk.eyJ1IjoiZGFsZXJzIiwiYSI6ImNsMHNwaGE5YTAwN2kzaWtiMzc4anoxeGYifQ.6lsx81FMux32u8smWZcYhA'
    }).addTo(mymap);
    {{#each traillist.trails}}
    L.marker([{{latitude}}, {{longitude}}]).addTo(mymap);
    {{/each}}
  </script>
    <style>
    #mapid { height: 360px; }
  </style>

